{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Attach to Django (Docker)",
            "type": "debugpy",
            "$preLaunchTask": "docker-compose-up",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 3000
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/app"
                }
            ],
            "django": true
        }
    ]
}